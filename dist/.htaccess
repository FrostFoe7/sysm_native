# .htaccess for cPanel hosting - Expo/React SPA
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # SPA Routing
  # If the request is for a real file or directory, serve it as is
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  # Otherwise, send everything to index.html for client-side routing
  RewriteRule . /index.html [L]
</IfModule>

# --- FIX CSP CONFLICTS ---
# Attempt to unset strict CSP headers if injected by the host
<IfModule mod_headers.c>
  Header unset Content-Security-Policy
  Header unset X-Content-Security-Policy
  Header unset X-WebKit-CSP
</IfModule>

# Gzip Compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css application/xml application/xhtml+xml application/rss+xml application/javascript application/x-javascript
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 month"
  ExpiresByType text/html "access plus 0 seconds"
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
</IfModule>
